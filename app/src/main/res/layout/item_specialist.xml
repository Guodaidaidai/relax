<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:padding="10dp"
              android:layout_margin="1dp"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@mipmap/portrait"
            android:id="@+id/specialistItemPortrait"/>
    <TextView
            android:text="专家姓名"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/specialistItemName" android:textAlignment="center"
            android:textColor="@android:color/black" android:textSize="18sp"/>
    <TextView
            android:text="评分"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/specialistItemRating" android:textAlignment="center"/>
</LinearLayout>