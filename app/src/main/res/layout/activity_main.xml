<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.cynthia.relax.activitis.main.MainActivity" android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
    android:background="#ffdfe9">

        <Button
                android:text="注册"
                android:layout_width="75dp"
                android:layout_height="wrap_content" android:id="@+id/mainRegister"
                android:background="@android:color/transparent" android:textSize="18sp"
                android:layout_centerVertical="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_marginRight="20dp" android:layout_marginEnd="20dp"/>
        <Button
                android:text="登录"
                android:layout_width="75dp"
                android:layout_height="wrap_content" android:id="@+id/mainLogin"
                android:background="@android:color/transparent" android:textSize="18sp"
                android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/mainRegister"
                android:layout_alignStart="@+id/mainRegister"/>
    </RelativeLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1">
            <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/selfTest"/>
            <TextView
                    android:text="心理自测"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/selfTestText" android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1">
            <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="left|top"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/preOrder"/>
            <TextView
                    android:text="预约专家"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/preOrderText" android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1">
            <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="center|top"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/myOrders"/>
            <TextView
                    android:text="我的订单"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/myOrdersText" android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1">
            <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="right|bottom"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/article" android:layout_weight="1"/>
            <TextView
                    android:text="暖心好文"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/articleText" android:layout_weight="1"
                    android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1">
            <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="left|bottom"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/treeHole" android:layout_weight="1"/>
            <TextView
                    android:text="树洞"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/treeHoleText" android:layout_weight="1"
                    android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1">
            <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="center|bottom"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/music" android:layout_weight="1"/>
            <TextView
                    android:text="推荐音乐"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/musicText" android:layout_weight="1"
                    android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
